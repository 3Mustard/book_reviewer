<%= image_tag('home.jpg') %>
<p>Please login to continue</p>
<br>
<%= flash[:error] %>

<%= form_for :user do |f| %>

    <div class="field<%= ' field_with_errors' if flash[:error] %>">
        <%= f.label :username %>
        <%= f.text_field :username %>
    </div>

    <br>

    <div class="field<%= ' field_with_errors' if flash[:error] %>">
        <%= f.label :password %> 
        <%= f.password_field :password %>
    </div>

    <br>

    <%= f.submit "Submit" %> 
<%end%>
<br>
<%= link_to "home", '/' %>